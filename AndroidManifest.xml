<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.heweather"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.heweather.activity.MainActivity"
            android:label="@string/app_name" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.heweather.activity.ChooseAreaActivity"></activity>
        <activity android:name="com.example.heweather.activity.SearchAreaActivity"></activity>"
        <service android:name="com.example.heweather.service.AutoUpdateService"></service>"
        <receiver android:name="com.example.heweather.receiver.AutoUpdateReceiver"></receiver>"
        </application>

</manifest>
